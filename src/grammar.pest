whitespace = _{ " " | "\n" | "\t" }

// useful
ident = { !keyword ~ ('a'..'z')+ }
lambda = _{ "Î»" }
dot = _{ "." }
lparen = _{ "(" }
rparen = _{ ")" }
colon = _{ ":" }


//keywords
val_zero = { "0" }
val_true = { "true" }
val_false = { "false" }
key_if = _{ "if" }
key_then = _{ "then" }
key_else = _{ "else" }
op_succ = { "succ" }
op_pred = { "pred" }
is_zero = _{ "iszero" }
type_bool = { "Bool" }
type_nat = { "Nat" }

type_term = _{ type_bool | type_nat }

keyword = _{ val_zero | val_true | val_false | key_if | key_else | key_then | op_succ | op_pred | is_zero | type_bool | type_nat }

program = { soi ~ application ~ eoi }

application = { var_abstr ~ application* }

var_abstr = _{ variable | abstraction }

abstraction = { lparen* ~ lambda ~ ident ~ colon ~ type_term ~ dot ~ application ~ rparen? }

variable = _{ val_zero | val_true | val_false | ident | if_then | zero_check | arithmetic | paren_var }

if_then = { key_if ~ application ~ key_then ~ application ~ key_else ~ application }

zero_check = { is_zero ~ application }

operator = _{ op_succ | op_pred }

arithmetic = { operator ~ application }

paren_var = _{ lparen ~ variable ~ rparen }

token_list = _{ ( ident | lambda | dot | lparen | rparen | colon | val_zero | val_true | val_false | key_if | key_else | key_then | op_succ | op_pred | is_zero | type_bool | type_nat )* }